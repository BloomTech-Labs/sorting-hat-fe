{
	"name": "client",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"antd": "^4.0.3",
		"axios": "^0.19.2",
		"babel-plugin-import": "^1.13.0",
		"babel-preset-react-app": "^9.1.2",
		"customize-cra": "^0.9.1",
		"dotenv": "^8.2.0",
		"less": "^3.11.1",
		"less-loader": "^5.0.0",
		"lodash": "^4.17.15",
		"node-sass": "^4.13.1",
		"react": "^16.13.1",
		"react-app-rewired": "^2.1.5",
		"react-dom": "^16.13.1",
		"react-icons": "^3.9.0",
		"react-particles-js": "^2.7.1",
		"react-redux": "^7.2.0",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.4.0",
		"recharts": "^1.8.5",
		"redux": "^4.0.5",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.3.0",
		"tailwindcss-pseudo": "^1.0.3"
	},
	"scripts": {
		"start": "npm run build:css && react-app-rewired start",
		"build": "npm run build:css && react-app-rewired build",
		"test": "jest",
		"eject": "react-app-rewired eject",
		"build:css": "postcss src/styles/tailwind.css -o src/styles/app.css",
		"watch:css": "postcss src/styles/tailwind.css -o src/styles/app.css -w",
		"test:cypress": "cypress open",
		"coverage": "CI=true yarn test --coverage --watchAll=false || true"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
			"\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
		},
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"!**/__tests__/**",
			"!**/vendor/**",
			"**/*.test.js"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"autoprefixer": "^9.7.4",
		"chance": "^1.1.4",
		"cypress": "^4.4.0",
		"cypress-plugin-tab": "^1.0.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^25.1.0",
		"postcss-cli": "^7.1.0",
		"tailwindcss": "^1.2.0"
	}
}
